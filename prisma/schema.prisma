generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Video {
  id            Int     @id @default(autoincrement())
  path          String  @unique
  isCompleted   Boolean @default(false)
  secondsPlayed Int     @default(0)
  episodeNumber Int?
  tmdbId        Int?
  tmdbNumber    Int?
  tmdbName      String?
  tmdbOverview  String?
  tmdbStillPath String?
  Season        Season? @relation(fields: [seasonId], references: [id])
  seasonId      Int?
}

model TvShow {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  seasons          Season[]
  tmdbId           String?
  tmdbName         String?
  tmdbOverview     String?
  tmdbPosterPath   String?
  tmdbBackdropPath String?
}

model Season {
  id             Int     @id @default(autoincrement())
  number         Int
  tmdbId         Int?
  tmdbNumber     Int?
  tmdbName       String?
  tmdbOverview   String?
  tmdbPosterPath String?
  TvShow         TvShow? @relation(fields: [tvShowId], references: [id])
  tvShowId       Int?
  videos         Video[]

  @@unique([number, tvShowId])
}
